      <indexConfigurations>
        <defaultSolrIndexConfiguration>
          <virtualFields>
            <processors>
              <add fieldName="updatedinterval"  type="Sitecore.ItemWebApi.VirtualFields.UpdatedIntervalFieldProcessor, Sitecore.Speak.ItemWebApi" />
            </processors>
          </virtualFields>
        </defaultSolrIndexConfiguration>
      </indexConfigurations>
    </contentSearch>
  </sitecore>
</configuration>